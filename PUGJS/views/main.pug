extends ./layouts/index

block content

    div
        include ./partials/header

    div(style="width: 500px; height: auto; background-color:#e7e7e7; display: flex; flex-direction:column; justify-content:center; align-items:center")
        h1(style="color:blue;") Ingrese datos
        br

        form(style="display: flex; flex-direction:column; justify-content:center; align-items:center" 
                    action="http://localhost:8080/productos/" method="POST")
            
            div(style="width: 100%")
                p(style="width:100px; margin-right:24px") Nombre
                input(type="text" id="title" name="title")
            
            div(style="width: 100%")
                p(style="width:100px; margin-right:24px") Precio
                input(type="text" id="price" name="price")

            div(style="width: 100%")
                p(style="width:100px; margin-right:24px") Url imagen
                input(type="text" id="thumbnail" name="thumbnail")

            button(type="submit" style="margin-bottom: 24px; margin-top: 24px; background-color: green; border-radius: 12px") Enviar

    include ./partials/footer  
